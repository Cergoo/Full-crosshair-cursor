{
   "manifest_version": 2,
   "name": "Full Crosshair Cursor",
   "version": "1.0",
   "description": "Full Crosshair Cursor over window",
   "icons": {
       "128": "128.png",
       "48":  "48.png",
       "16":  "16.png"
   },
   "content_scripts": [
       {
           "matches": [ "<all_urls>" ],
           "js": [ "app.js" ],
           "css": [ "style.css" ]
       }
   ],
   "permissions": ["activeTab"]
}